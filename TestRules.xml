<?xml version="1.0" encoding="UTF-8" ?>

<rulebase xmlns="http://www.psl.cs.columbia.edu/2001/01/DistillerRule.xsd">

<!-- The spamblocker rule -->
<rule name="testRule">
   <states>
      <state timebound="-1">
        <attribute name="from" value="*1"/>
	<attribute name="spam" value="true"/>
      </state>
      <state timebound="5">
        <attribute name="from" value="*1"/>
	<attribute name="spam" value="true"/>
      </state>
   </states>
   <actions>
      <notification>
         <attribute name="spamblock" value="*1"/>
      </notification>
   </actions>
</rule>

<!-- First example rule for workgroup cache -->
<rule name="WGCRule1">
   <states>
      <state timebound="-1">
	<attribute name="Instigator" value="Alpa"/>
	<attribute name="DataHandle" value="*1"/>
      </state>
   </states>
   <actions>
     <notification>
	 <attribute name="Instigator" value="Alpa"/>
         <attribute name="Action" value="Push"/>
	 <attribute name="Target" value="Module"/>
	 <attribute name="TargetName" value="Gail"/>
	 <attribute name="DataHandle" value="*1"/>
      </notification>
   </actions>
</rule>

<!-- Second example rule for workgroup cache -->
<rule name="WGCRule2">
   <states>
      <state timebound="-1">
        <attribute name="Instigator" value="Gail"/>
        <attribute name="DataHandle" value="*1"/>
      </state>
   </states>
   <actions>   
     <notification>
	 <attribute name="Instigator" value="Gail"/>
         <attribute name="Action" value="Push"/>
         <attribute name="Target" value="Workgroup"/>
         <attribute name="TargetName" value="PSL-Workgroup"/>
         <attribute name="DataHandle" value="*1"/>
      </notification>
   </actions>
</rule>

<rule name="test">
  <states>
    <state timebound="-1">
      <attribute name="foo" value="bar"/>
    </state>
  </states>
  <actions>
    <notification>
      <attribute name="bar" value="baz"/>
    </notification>
  </actions>
</rule> 

</rulebase>